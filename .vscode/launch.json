{
    "configurations": [
        {
            "name": "Debug Android",
            "request": "launch",
            "type": "reactnativedirect",
            "cwd": "${workspaceFolder}/frontend",
            "platform": "android"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug backend",
            "cwd": "${workspaceFolder}/backend",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "dev"
            ],
            "env": {
                "NODE_OPTIONS": "--enable-source-maps"
            },
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug backend tests",
            "cwd": "${workspaceFolder}/backend",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "test",
                "--runInBand",
                "--watchAll=false"
            ],
            "env": {
                "NODE_OPTIONS": "--enable-source-maps"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "sourceMaps": true
        }
    ]
}
