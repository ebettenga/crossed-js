{
  "name": "crossed",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.ts",
  "exports": "./dist/index.mjs",
  "scripts": {
    "start": "tsx ./src/index.ts",
    "dev": "tsx --env-file .env --watch ./src/index.ts",
    "dev:worker": "SERVER_MODE=worker tsx --env-file .env --watch ./src/index.ts",
    "build": "pkgroll",
    "commands": "tsx --env-file .env ./src/commands/cli.ts",
    "prepare": "if [ \"$CI\" != \"true\" ]; then pre-commit install; fi",
    "ci:load-test-data": "yarn commands load-test-data",
    "test": "tsx --experimental-vm-modules node_modules/jest/bin/jest.js --verbose --coverage",
    "serve:coverage": "npx serve coverage/lcov-report",
    "migration:run": "npx typeorm-ts-node-esm migration:run -d ./src/data-source.ts",
    "migration:generate": "npx typeorm-ts-node-esm migration:generate -d ./src/data-source.ts --esm",
    "migration:create": "npx typeorm-ts-node-esm migration:create",
    "migration:revert": "npx typeorm-ts-node-esm migration:revert -d ./src/data-source.ts"
  },
  "dependencies": {
    "@fastify/autoload": "^6.0.2",
    "@fastify/basic-auth": "^6.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/passport": "^3.0.1",
    "@fastify/secure-session": "^8.1.0",
    "@fastify/static": "^8.0.4",
    "@types/bcrypt": "^5.0.2",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.7",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.34.10",
    "fastify": "^5.0.0",
    "fastify-print-routes": "^4.0.1",
    "fastify-socket.io": "^5.1.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "jsx-email": "^2.6.3",
    "nodemailer": "^6.9.16",
    "passport-github": "^1.1.0",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.33.5",
    "socket.io": "^4.0.0",
    "typeorm": "^0.3.20",
    "typeorm-fastify-plugin": "^3.0.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^22.10.1",
    "@types/passport": "^1.0.17",
    "commander": "^12.1.0",
    "jest": "^29.0.0",
    "pino-pretty": "^13.0.0",
    "pkgroll": "^2.5.1",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
